agent:
  id: rapid_analysis.evidence_verifier
  name: Evidence Verifier
  stage: rapid_analysis
  stage_label: Rapid Analysis
  role: validator
  description: Executes Evidence Verifier responsibilities within the Rapid Analysis
    stage.
  capabilities: []
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  depends_on:
  - rapid_analysis.coordinator
  - orchestration.supervisor
  - orchestration.observability_hub
  - orchestration.policy_enforcer
  - orchestration.audit_trail
  - orchestration.retry_manager
  - orchestration.quality_board
  inputs:
  - rapid_analysis.input
  outputs:
  - rapid_analysis.output
  prompts:
  - prompts/rapid_analysis/evidence_verifier_primary.md
  - prompts/rapid_analysis/evidence_verifier_fallback.md
  - prompts/rapid_analysis/evidence_verifier_summary.md
  concurrency: 1
  retry:
    max_attempts: 3
    strategy: exponential
    cooldown_seconds: 15
  category: stage
