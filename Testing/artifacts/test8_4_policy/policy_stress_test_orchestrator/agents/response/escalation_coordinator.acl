agent:
  id: response.escalation_coordinator
  name: Escalation Coordinator
  stage: response
  stage_label: Response & Escalation
  role: strategist
  description: Executes Escalation Coordinator responsibilities within the Response
    & Escalation stage.
  capabilities: []
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  depends_on:
  - response.coordinator
  - orchestration.supervisor
  - orchestration.observability_hub
  - orchestration.policy_enforcer
  - orchestration.audit_trail
  - orchestration.retry_manager
  - orchestration.quality_board
  inputs:
  - response.input
  outputs:
  - response.output
  prompts:
  - prompts/response/escalation_coordinator_primary.md
  - prompts/response/escalation_coordinator_fallback.md
  - prompts/response/escalation_coordinator_summary.md
  concurrency: 1
  retry:
    max_attempts: 3
    strategy: exponential
    cooldown_seconds: 15
  category: stage
