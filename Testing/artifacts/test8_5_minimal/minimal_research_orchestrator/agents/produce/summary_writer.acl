agent:
  id: produce.summary_writer
  name: Summary Writer
  stage: produce
  stage_label: Produce
  role: communicator
  description: Executes Summary Writer responsibilities within the Produce stage.
  capabilities: []
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  depends_on:
  - produce.coordinator
  - orchestration.supervisor
  - orchestration.observability_hub
  - orchestration.policy_enforcer
  - orchestration.audit_trail
  - orchestration.retry_manager
  - orchestration.quality_board
  inputs:
  - produce.input
  outputs:
  - produce.output
  prompts:
  - prompts/produce/summary_writer_primary.md
  - prompts/produce/summary_writer_fallback.md
  - prompts/produce/summary_writer_summary.md
  concurrency: 1
  retry:
    max_attempts: 3
    strategy: exponential
    cooldown_seconds: 15
  category: stage
