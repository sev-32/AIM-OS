agent:
  id: orchestration.policy_enforcer
  name: Policy Enforcer
  stage: orchestration
  stage_label: Global Orchestration
  role: governance
  description: Ensures every agent complies with governance packs before execution
    proceeds.
  capabilities:
  - monitor
  - govern
  - recover
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  - policy.stage_alignment
  - policy.system_observability
  - policy.system_fallbacks
  depends_on:
  - gather.coordinator
  - produce.coordinator
  inputs:
  - orchestration.signal
  outputs:
  - orchestration.report
  prompts:
  - prompts/orchestration/policy_enforcer_primary.md
  - prompts/orchestration/policy_enforcer_monitor.md
  - prompts/orchestration/policy_enforcer_summary.md
  concurrency: 1
  retry:
    max_attempts: 5
    strategy: exponential
    cooldown_seconds: 30
  category: governance
