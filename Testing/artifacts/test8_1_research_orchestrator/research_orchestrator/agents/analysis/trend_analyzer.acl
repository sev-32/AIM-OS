agent:
  id: analysis.trend_analyzer
  name: Trend Analyzer
  stage: analysis
  stage_label: Analysis
  role: analyst
  description: Executes Trend Analyzer responsibilities within the Analysis stage.
  capabilities: []
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  depends_on:
  - analysis.coordinator
  - orchestration.supervisor
  - orchestration.observability_hub
  - orchestration.policy_enforcer
  - orchestration.audit_trail
  - orchestration.retry_manager
  - orchestration.quality_board
  inputs:
  - analysis.input
  outputs:
  - analysis.output
  prompts:
  - prompts/analysis/trend_analyzer_primary.md
  - prompts/analysis/trend_analyzer_fallback.md
  - prompts/analysis/trend_analyzer_summary.md
  concurrency: 1
  retry:
    max_attempts: 3
    strategy: exponential
    cooldown_seconds: 15
  category: stage
