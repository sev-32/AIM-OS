agent:
  id: orchestration.retry_manager
  name: Retry Manager
  stage: orchestration
  stage_label: Global Orchestration
  role: resilience
  description: Coordinates retries, exponential backoff, and safe restarts across
    stages.
  capabilities:
  - monitor
  - govern
  - recover
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  - policy.stage_alignment
  - policy.system_observability
  - policy.system_fallbacks
  depends_on:
  - intake.coordinator
  - investigation.coordinator
  - delivery.coordinator
  inputs:
  - orchestration.signal
  outputs:
  - orchestration.report
  prompts:
  - prompts/orchestration/retry_manager_primary.md
  - prompts/orchestration/retry_manager_monitor.md
  - prompts/orchestration/retry_manager_summary.md
  concurrency: 1
  retry:
    max_attempts: 5
    strategy: exponential
    cooldown_seconds: 30
  category: resilience
