agent:
  id: delivery.draft_writer
  name: Draft Writer
  stage: delivery
  stage_label: Delivery & QA
  role: communicator
  description: Executes Draft Writer responsibilities within the Delivery & QA stage.
  capabilities: []
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  depends_on:
  - delivery.coordinator
  - orchestration.supervisor
  - orchestration.observability_hub
  - orchestration.policy_enforcer
  - orchestration.audit_trail
  - orchestration.retry_manager
  - orchestration.quality_board
  inputs:
  - delivery.input
  outputs:
  - delivery.output
  prompts:
  - prompts/delivery/draft_writer_primary.md
  - prompts/delivery/draft_writer_fallback.md
  - prompts/delivery/draft_writer_summary.md
  concurrency: 1
  retry:
    max_attempts: 3
    strategy: exponential
    cooldown_seconds: 15
  category: stage
