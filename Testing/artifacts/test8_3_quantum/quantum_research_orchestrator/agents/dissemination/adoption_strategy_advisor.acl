agent:
  id: dissemination.adoption_strategy_advisor
  name: Adoption Strategy Advisor
  stage: dissemination
  stage_label: Stakeholder Dissemination
  role: strategist
  description: Executes Adoption Strategy Advisor responsibilities within the Stakeholder
    Dissemination stage.
  capabilities: []
  policies:
  - policy.evidence_threshold
  - policy.latency_budget
  - policy.research_depth
  - policy.seed.evidence_threshold
  - policy.seed.max_research_depth
  - policy.seed.max_total_time
  depends_on:
  - dissemination.coordinator
  - orchestration.supervisor
  - orchestration.observability_hub
  - orchestration.policy_enforcer
  - orchestration.audit_trail
  - orchestration.retry_manager
  - orchestration.quality_board
  inputs:
  - dissemination.input
  outputs:
  - dissemination.output
  prompts:
  - prompts/dissemination/adoption_strategy_advisor_primary.md
  - prompts/dissemination/adoption_strategy_advisor_fallback.md
  - prompts/dissemination/adoption_strategy_advisor_summary.md
  concurrency: 1
  retry:
    max_attempts: 3
    strategy: exponential
    cooldown_seconds: 15
  category: stage
